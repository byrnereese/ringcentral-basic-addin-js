{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "I am sorry. It looks like you need help."
        },
        {
            "type": "TextBlock",
            "text": "Here are some common tasks people perform with this add-in.",
            "wrap": true
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Help (show this card)",
                    "data": {
                        "actionType": "help",
                        "botId": "${botId}",
                        "groupId": "${groupId}"
                    }
                },
                {
                    "type": "Action.Submit",
                    "title": "Prompt",
                    "data": {
                        "actionType": "prompt",
                        "botId": "${botId}",
                        "groupId": "${groupId}"
                    }
                },
                {
                    "type": "Action.Submit",
                    "title": "Prompt (w/dialog)",
                    "data": {
                        "actionType": "prompt_with_dialog",
                        "botId": "${botId}",
                        "groupId": "${groupId}"
                    }
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5"
}
